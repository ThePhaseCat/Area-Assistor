{
  "schemaVersion": 1,
  "id": "areaassistor",
  "version": "${version}",

  "name": "Area Assistor",
  "description": "Area Assistor lets you select block positions and calculates the area and how many of the tool you're holding you need to clear the area!",
  "authors": [
    "ThePhaseCat",
    "trainb0y"
  ],
  "contact": {
    "homepage": "https://github.com/ThePhaseCat/Area-Assistor",
    "sources": "https://github.com/ThePhaseCat/Area-Assistor"
  },

  "license": "MIT",
  "icon": "assets/minecalc/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "com.areaassistor.AreaAssistor"
    ]
  },
  "mixins": [
    "areaareaassistor.mixins.json"
  ],

  "depends": {
    "fabricloader": "0.14.*",
    "fabric-api": "*",
    "minecraft": "1.20.*",
    "java": ">=17"
  }
}
